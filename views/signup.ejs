<%- include("partials/altnavbar") %>
<div class="container mt-4">

  <% if (errorM.length>0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong><%= errorM %></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
    <% } %>

    <h1 style="text-align:center;">Register</h1>

  <div class="row">
    <div class="col-sm-8 m-auto">
      <div class="card">
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group">
              <label for="username">Name</label>
              <input type="text" class="form-control" name="username" placeholder="Enter Username" required>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" placeholder="Enter MEC mail Id" pattern="^[a-z]{1,30}[0-9]{6}@[m][e][c][h][y][d]\.[a][c]\.[i][n]$" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password field" minlength="8" required>
            </div>
              <button type="submit" class="btn btn-dark col-12 col-lg-6">Register</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/simplefooter') %>
