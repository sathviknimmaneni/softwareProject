<!DOCTYPE html>
<%- include('partials/navbar') %>
    <div class="card" style="width:600px;">
      <div class="card-body">

        <form action="/startauction" method="POST">

          <div class="form-group">
            <label for="itemName">Item Name:</label>
            <input type="text" class="form-control" name="itemName" required>
          </div>

          <div class="form-group">
            <label for="itemCategory">Category:</label>
            <select class="Category" name="itemCategory" required>
              <option value="Clothes">Clothes</option>
              <option value="shoes">Shoes</option>
              <option value="books">Books</option>
            </select>
          </div>

          <div class="form-group">
            <label for="basePrice">Starting Price:</label>
            <input type="Number" class="form-control" name="basePrice" min="1" required>
          </div>

          <div class="form-group">
            <label for="itemDuration">Duration:</label>
            <input type="Number" class="form-control" name="itemDuration" min="1" required>
          </div>

          <div class="form-group">
            <label for="itemDescription">Description:</label>
            <textarea name="itemDescription" rows="4" cols="50" required></textarea>
          </div>

          <button type="submit" class="btn btn-dark">Login</button>

        </form>

      </div>
    </div>

<%- include('partials/footer') %>
