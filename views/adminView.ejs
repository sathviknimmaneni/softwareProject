<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Admin only">
        <link rel="icon" href="./icons/Logo.png" type="image/gif" sizes="50x50">
    <title>BN- Admin</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
  </head>
  <body style="margin-top:55px;">

<%- include("partials/navbar") %>

<div class="row">
  <div class="col-2">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Auctions</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Users</a>
        </div>
  </div>
  <div class="col-10">
    <div class="tab-content" id="v-pills-tabContent">

<!-- auction Items -->
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <div class="card-deck row">
          <% auctions.forEach(function(item){ %>
            <div class="col-md-3">
                    <div class="card m-3 p-1" >
                        <img class="card-img-top img-fluid img-responsive" src="/image/<%= item.image %>" alt="Not a Valid Image" style="max-height:200px;">
                        <div class="card-block">
                          <h5><%= item.name %></h5>
                          <p><small><%= AName %></small></p>
                          <p>Current Price: <strong><%= item.currentBid %></strong></p>
                          <p>Highest Bidder:   <strong><%= item.currentBidder.name %></strong></p>
                          <p>Participants: <strong><%= item.participants.length %></strong></p>
                          <p>Status: <strong><%= item.status %></strong></p>
                        </div>
                        <a href="/adminupdate/<%= item._id %>" class="btn btn-dark btn-lg btn-block mt-2" role="button">Update Details</a>
                        <a href="/items/<%= item._id %>" class="btn btn-outline-dark btn-lg btn-block mt-2" role="button">View Details</a>
                      </div>
                  </div>
                <% }) %>
          </div>
        </div>

<!-- users -->
      <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
        <div class="card-deck row">
          <% Users.forEach(function(user){ %>
            <div class="col-md-3">
                    <div class="card m-3 p-1" >
                        <img class="card-img-top img-fluid" src="//placehold.it/500x200" alt="Card image cap">
                        <div class="card-block">
                          <h5><%= user.username %></h5>
                          <p><small><%= user.email %></small></p>
                          <p><%= user.role %></p>
                          <p>Is active: <strongid id="<%= user.id %>"><%= user.flag %></strong></p>
                          <script type="text/javascript">
                            if(<%= user.flag %> == false){
                             document.getElementById("<%= user.id %>").style.color = "red";
                           }else{
                             document.getElementById("<%= user.id %>").style.color ="green";
                           }
                          </script>
                        </div>
                        <form class="" action="/users/<%= user._id %>/<%= user.flag%>" method="post">
                        <button type="submit" name="button"class="btn btn-outline-dark btn-lg btn-block mt-2" role="button">Block/ Unblock</button>
                        </form>
                      </div>
                  </div>
                <% }) %>
          </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer") %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>  </body>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</body>
</html>
